<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/colorGray300"
    android:layoutDirection="rtl"
    android:id="@+id/rl_commentRow_parent">

    <TextView
        android:id="@+id/txt_commentRow_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textColor="@color/colorGray500"
        tools:text="امید" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rt_commentRow_ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@+id/txt_commentRow_userName"
        android:numStars="5"
        android:progressTint="@color/colorBlack" />

    <TextView
        android:id="@+id/txt_commentRow_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_commentRow_userName"
        android:layout_margin="4dp"
        android:textColor="@color/colorBlack"
        tools:text="خیلی برنامه خوبیه دست شما درد نکنه" />

</RelativeLayout>