<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/rl_trainItem_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:id="@+id/img_trainItem_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@drawable/ic_live_tv_black_24dp" />

        <ImageView
            android:id="@+id/img_trainItem_toy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toRightOf="@+id/img_trainItem_tv"
            android:src="@drawable/ic_toys_black_24dp" />

        <TextView
            android:id="@+id/txt_trainItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_trainItem_toy"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccentAb"
            android:textSize="18sp"
            tools:text="1,2345,000 ریال" />

        <TextView
            android:id="@+id/txt_trainItem_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccentAb"
            android:textSize="18sp"
            tools:text="11:25" />

        <ImageView
            android:id="@+id/img_trainItem_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/txt_trainItem_endTime"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp" />

        <TextView
            android:id="@+id/txt_trainItem_startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@+id/img_trainItem_arrow"
            android:textColor="@color/colorAccentAb"
            android:textSize="18sp"
            tools:text="23:00" />

        <TextView
            android:id="@+id/txt_trainItem_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_trainItem_price"
            android:layout_margin="8dp"
            android:textSize="18sp"
            tools:text="5 نفر" />

        <TextView
            android:id="@+id/txt_trainItem_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_trainItem_endTime"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:textSize="18sp"
            tools:text="::5 ستاره سروش" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>