<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fragmentGameApp_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:paddingBottom="8dp">

    <ImageView
        android:id="@+id/img_fragmentGameApp_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/cafe_option_style"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txt_fragmentGameApp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/img_fragmentGameApp_icon"
        android:text="آموزش" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_fragmentGameApp_icon"
        android:layout_marginTop="8dp"
        android:background="@color/colorGray400" />

</RelativeLayout>