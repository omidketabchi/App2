<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray200"
    android:orientation="vertical"
    tools:context=".Alibaba.AlibabaInformationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryAb"
            android:elevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_alibabaInformation_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_arrow_forward_white_24dp" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_toolbarInfoTicket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/img_alibabaInformation_back"
                    android:text="اطلاعات بلیط"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_toolbarInfoTicket"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/img_alibabaInformation_back"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    tools:text="16 اردیبهشت 1398" />

            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="اطلاعات پرواز" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img_alibabaInformation_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_airplanemode_active_black_24dp" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_flightTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/img_alibabaInformation_icon"
                    android:textColor="@color/colorAccentAb"
                    tools:text="12:45" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/txt_alibabaInformation_flightTime"
                    tools:text="اصفهان - فرودگاه شهید بهشتی اصفهان" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_source"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_toLeftOf="@+id/txt_alibabaInformation_flightTime"
                    tools:text="اصفهان - فرودگاه شهید بهشتی اصفهان" />

                <View
                    android:id="@+id/view_alibabaInformation_line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_alibabaInformation_destination"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@color/colorGray600" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_flightIdTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line1"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:text="شماره پرواز:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_flightId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line1"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/txt_alibabaInformation_flightIdTitle"
                    android:textColor="@color/colorBlack"
                    tools:text="58920" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_classTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_flightIdTitle"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:text="کلاس:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_flightId"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/txt_alibabaInformation_classTitle"
                    android:textColor="@color/colorBlack"
                    tools:text="58920" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line1"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:textColor="@color/colorBlack"
                    tools:text="58920" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_kindTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line1"
                    android:layout_toRightOf="@+id/txt_alibabaInformation_kind"
                    android:text="نوع:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_kind"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="نامشخص"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_weightTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_alibabaInformation_kind"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@+id/txt_alibabaInformation_weight"
                    android:text="بار مجاز:" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="قوانین جریمه استرداد" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_alibabaInformation_penalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:text="قیمت ها:" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_alibabaInformation_youngPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="بلیط بزرگسال:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_youngPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorAccentAb"
                    tools:text="2,800,000 ریال" />

                <View
                    android:id="@+id/view_alibabaInformation_line2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_alibabaInformation_youngPrice"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorGray600" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_childPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line2"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="بلیط کودوک:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_childPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line2"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorAccentAb"
                    tools:text="1,800,000 ریال" />

                <View
                    android:id="@+id/view_alibabaInformation_line3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_alibabaInformation_childPrice"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorGray600" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_babyPriceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line3"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="بلیط نوزاد:" />

                <TextView
                    android:id="@+id/txt_alibabaInformation_babyPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_alibabaInformation_line3"
                    android:layout_alignParentLeft="true"
                    android:layout_margin="4dp"
                    android:textColor="@color/colorAccentAb"
                    tools:text="1,800,000 ریال" />

                <View
                    android:id="@+id/view_alibabaInformation_line4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/txt_alibabaInformation_childPrice"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/colorGray600" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_style"
                    android:padding="8dp"
                    android:text="انتخاب این بلیط"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>