<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutDirection="rtl"
    android:id="@+id/rel_newApp_parent"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">

    <ImageView
        android:id="@+id/img_newAppRow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_profile" />

    <TextView
        android:id="@+id/txt_newApp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_newAppRow"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        tools:text="بازی کودکانه"
        android:minLines="1"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/txt_newApp_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_newApp_title"
        android:text="رایگان"
        android:layout_marginTop="8dp"/>


    <ImageView
        android:id="@+id/img_newAppRow_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_newApp_title"
        android:layout_toLeftOf="@id/txt_newApp_type"
        android:src="@drawable/ic_coin" />

</RelativeLayout>