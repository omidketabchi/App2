<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nst_fragmentPersian_nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- scroll view can contain on ly one child -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_fragmentPersian_slide"
                android:layout_width="wrap_content"
                android:layout_height="200dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fragmentPersian_persianRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/progress_persian"
                style="@style/SpinKitView.Large.Wave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:SpinKit_Color="@color/colorPrimaryDarkG" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>