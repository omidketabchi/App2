<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SampleProject.RecorderActivity">

    <ImageView
        android:id="@+id/img_record_recording"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_record_voice_blue" />

    <ImageView
        android:id="@+id/img_record_record"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_start_record_red" />

    <TextView
        android:id="@+id/txt_record_timer"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/txt_style"
        android:padding="15dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@+id/img_record_record"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_record_recording"
        tools:text="test"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>