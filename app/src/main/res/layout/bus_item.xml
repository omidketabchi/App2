<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:id="@+id/rl_busItem_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/txt_busItem_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/txt_type_style"
            android:padding="4dp"
            android:textColor="@color/colorWhite"
            tools:text="ماهان VIP" />

        <TextView
            android:id="@+id/txt_busItem_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            tools:text="همسفر چابکسواران پایانه بیهقی" />

        <TextView
            android:id="@+id/txt_busItem_sourceTerminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_busItem_source"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            tools:text="تهران پایانه بیهقی" />

        <TextView
            android:id="@+id/txt_busItem_destinationTerminal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_busItem_type"
            android:layout_margin="8dp"
            tools:text="اصفهان پایانه کاوه" />

        <View
            android:id="@+id/vw_busItem_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/txt_busItem_sourceTerminal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorGray600" />

        <TextView
            android:id="@+id/txt_busItem_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_busItem_line"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            tools:text="ظرفیت موجود 26 نفر" />

        <TextView
            android:id="@+id/txt_busItem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vw_busItem_line"
            android:layout_margin="8dp"
            android:textColor="@color/colorAccentAb"
            android:textSize="18sp"
            tools:text="400,000 ریال" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>