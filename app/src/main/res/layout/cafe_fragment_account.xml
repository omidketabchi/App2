<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <include layout="@layout/cafe_usual_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:text="نام کاربری:"
        android:textColor="@color/colorGray500"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_fragmentAccount_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="امید کتابچی"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="شماره همراه:"
        android:textColor="@color/colorGray500"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_fragmentAccount_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:text="09122593743"
        android:textColor="@color/colorBlack"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray300"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/txt_fragmentAccount_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خروج از حساب کاربری"
        android:textColor="#FF0000"
        android:textSize="16sp"
        android:layout_marginRight="16dp" />
</LinearLayout>